<h1 class="text-xl font-semibold mb-4">Call Logs</h1>

<table class="w-full text-xs bg-slate-800 rounded-2xl overflow-hidden border border-slate-700">
  <thead class="bg-slate-700 text-slate-200">
    <tr>
      <th class="px-3 py-2 text-left">Time</th>
      <th class="px-3 py-2 text-left">Number</th>
      <th class="px-3 py-2 text-left">Status</th>
      <th class="px-3 py-2 text-left">Duration</th>
      <th class="px-3 py-2 text-left">Error</th>
    </tr>
  </thead>
  <tbody>
    <% @call_logs.each do |log| %>
      <tr class="border-t border-slate-700/60">
        <td class="px-3 py-2"><%= log.created_at&.strftime("%d %b %H:%M") %></td>
        <td class="px-3 py-2"><%= log.phone_number %></td>
        <td class="px-3 py-2">
          <span class="<%= log.status == 'completed' ? 'text-emerald-400' : (log.status == 'failed' ? 'text-rose-400' : 'text-slate-200') %>">
            <%= log.status || "queued" %>
          </span>
        </td>
        <td class="px-3 py-2"><%= log.duration || "-" %></td>
        <td class="px-3 py-2 text-rose-300"><%= log.error_message %></td>
      </tr>
    <% end %>
  </tbody>
</table>
